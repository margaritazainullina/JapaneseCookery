<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
        "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="firstName">
        <field-validator type="requiredstring">
            <param name="trim">true</param> 
            <message>Введите имя</message> 
        </field-validator>
    </field>
    <field name="lastName">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message>Введите фамилию</message> 
        </field-validator>
    </field>
    <field name="email">
        <field-validator type="requiredstring">
            <param name="trim">true</param> 
            <message>Введите email</message> 
        </field-validator>
    </field>
    <field name="password">
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message>Введите пароль</message> 
        </field-validator>
    </field>
</validators>